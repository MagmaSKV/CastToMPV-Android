<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="ðŸ“º Cast to MPV"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="PC IP:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ipEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Example: 192.168.1.101"
            android:padding="20dp" />

        <TextView
            android:id="@+id/portLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Port:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/portEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Example: 8080"
            android:inputType="number"
            android:padding="20dp" />

        <TextView
            android:id="@+id/debugLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Debug Mode:"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/debugSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:text="Enable Debug Logging" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:text="ðŸ’¾ Save Configuration" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:text="ðŸ”— Test Connection" />

        <Button
            android:id="@+id/testVideoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:text="â–¶ï¸ Test Video" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1DCCCCCC"
            android:gravity="center"
            android:padding="30dp"
            android:text="Status: Ready to configure"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/debugSectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="Debug Log:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/debugLogTextView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#212121"
            android:padding="20dp"
            android:text="Debug logs will appear here..."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/instructionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#1DCCCCCC"
            android:padding="25dp"
            android:text="ðŸ“± How to use:\n\n1. Configure your PC IP above\n2. Run on PC: python server.py\n3. In YouTube/Chrome/Application, SHARE a video\n4. Select 'Cast to MPV'\n5. It will be sent to PC automatically!"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>